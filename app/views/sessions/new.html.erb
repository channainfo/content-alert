<% content_for(:title) { "Sign In" } %>

<%= form_tag sessions_path, role: 'form', class: 'form-box form-center' do %>
  <div class='input-row'>
    <%= text_field_tag :user_name, params[:user_name], class: 'form-control radius', placeholder: 'User name' %>
  </div>

  <div class='input-row'>
    <%= password_field_tag :password, '', class: 'form-control radius', placeholder: 'Password' %>
  </div>

  <div class='input-row' style='text-align:right ;'>
    <div class='left' style='padding-top: 10px;'>
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me, 'Remember me',style: 'font-size: 110%; color: #666;' %>
    </div>
    <div class='right'>
      <%= button_tag "Sign In", class: 'btn btn-primary btn-app' %>
    </div>
  </div>

<% end %>