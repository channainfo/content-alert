<%= simple_form_for @user, url: sign_up_path, role: 'form', class: 'form-box form-center', autocomplete: :off do |f| %>
 <!-- Hack autocomplete in browser-->
 <input type="password" style="display:none">

  <div class='input-row'>
    <%= f.input :full_name, required: true, class: 'form-control radius' %>
  </div>

  <div class='input-row'>
    <%= f.input :email, required: true, class: 'form-control radius' %>
  </div>

  <div class='input-row'>
    <%= f.input :phone, class: 'form-control radius' %>
  </div>

  <div class='input-row'>
    <%= f.input :password, class: 'form-control radius' %>
  </div>

  <div class='input-row'>
    <%= f.input :password_confirmation, required: true, class: 'form-control radius' %>
  </div>

  <div class='input-row' style='text-align:right ;'>
    <div class="pull-left" style="padding-top: 10px;"> Already have an account? <b><%=link_to "Sign in", sign_in_path %></b> </div>
    <div class='pull-right'>
      <%= button_tag "Sign Up", class: 'btn btn-primary btn-app' %>
    </div>
  </div>

<% end %>