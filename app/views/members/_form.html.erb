<%=simple_form_for(@member, html: { class: 'form-inline form'}) do |f| %>
  <%= errors_for @member %>

  <div class='input-row'>
    <%=f.input :full_name, input_html: {class: 'form-control'} %>
  </div>

  <%=f.input :email, input_html: {class: 'form-control'}, wrapper_html: { class: 'inline'} %>
  <%=f.input :email_alert, label: 'Email Alert', input_html: {class: 'input-inline'}, wrapper_html: { class: 'cb-block'} %>

  <%=f.input :phone, label: 'Number', input_html: {class: 'form-control'}, wrapper_html: { class: 'inline'} %>
  <%=f.input :sms_alert, label: 'SMS Alert', input_html: {class: 'input-inline'}, wrapper_html: { class: 'cb-block'} %>

  <div class='form-group form-action-group'>
    <label></label>
    <%=f.submit 'Save', label: false, class: 'btn btn-primary btn-app' %>
  </div>
<% end %>