<%= paginate_for(@members) %>
<%= page_header "List Member" do %>
  <%= link_to 'New Member', new_member_path() %>
<% end %>

<table class='table'>
  <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Number</th>
      <th>Email Alert</th>
      <th>SMS Alert</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= link_to member.full_name, edit_member_path(member) %></td>
        <td><%=member.email %></td>
        <td><%=member.phone %></td>
        <td><%=member.email_alert %></td>
        <td><%=member.sms_alert %></td>
        <td>
           <%= link_to "Delete", member_path(member), method: :delete, data: { confirm: 'Are you sure to delete this member' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate_for(@members) %>