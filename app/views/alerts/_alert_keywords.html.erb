<div style='max-width: 500px;'>
  <h3 class='header-title'> Alert Keywords </h3>

  <div id='alert-keyword' >
    <div class="input-group">
      <input type="text" 
            class="form-control typeahead" placeholder="Keyword"
            id="alert-keyword-typeahead"
            data-url="<%= new_keywords_alert_path(@alert) %>" >

      <span class="input-group-btn">
        <%= link_to "Add Keyword", alert_alert_keywords_path(@alert), class: 'btn btn-default typeahead-add', id: 'add-alert-keyword' %>
      </span>
    </div>

    <input type='hidden' id='alert-keyword-value' >
  </div>

  <div id='alert-keyword-list'>
    <%= render 'alert_keywords/keywords', alert: @alert %>
  </div>
</div>
<br />
