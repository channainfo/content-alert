<%= paginate_for(@alerts) %>

<%= page_header "List Alert" do %>
  <%= link_to 'New Alert', new_alert_path() %>
<% end %>


<table class='table panel'>
  <thead>
    <tr>
      <td>Name</td>
      <td>Url</td>
      <td>Keywords</td>
      <td width="60">Action</td>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= link_to alert.name, edit_alert_path(alert) %></td>
        <td><%= alert.url %></td>
        <td><%= truncate(alert.keywords.map(&:name).join(","), length: 120) %></td>
        <td>
           <%= link_to "Delete", alert_path(alert), method: :delete, data: { confirm: 'Are you sure to delete this alert' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate_for(@alerts) %>