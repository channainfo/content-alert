<% content_for(:title) { "Forget Password" } %>
<h3 class="header-title"> Forget Password </h3>
<p class="app-desc">
  Please enter your account <b>email</b>, we will send you an instruction on how to <b>change your password</b> to this email. 
</p>

<br />

<%= form_tag request_change_passwords_path, method: :put, class: 'form-box form-center' do |f| %>
  <div class="input-group">
      <%= text_field_tag :email, params[:email], required: true, class: 'form-control radius', placeholder: 'Account email', autocomplete: :off %>
      <span class="input-group-btn">
        <%= button_tag "Get Instruction", class: 'btn btn-primary btn-app' %>
      </span>
  </div>

<% end %>
