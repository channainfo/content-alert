<% content_for(:title) { "Change Password" } %>
<h3 class="header-title"> Change Password </h3>

<p class="app-desc">
  Please enter your new password below, to change your password
</p>

<br />


<%= simple_form_for @user, url: password_path(id: params[:t]), role: 'form', class: 'form-box form-center' do |f| %>
  <%= hidden_field_tag :t, params[:t] %>

  <div class='input-row'>
    <%= f.input :password, required: true, label: 'New Password', input_html: {autocomplete: :off}, class: 'form-control radius' %>
  </div>

  <div class='input-row'>
    <%= f.input :password_confirmation, required: true, label: 'Confirm New Password', input_html: {autocomplete: :off}, class: 'form-control radius' %>
  </div>

  <div class='input-row' style='text-align:right ;'>
    <div class='right'>
      <%= button_tag "Change Your Password", class: 'btn btn-primary btn-app' %>
    </div>
  </div>

<% end %>